<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/timeline_item_list_height"
	android:background="@drawable/timeline_list_item"
	android:gravity="center"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/home_team_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/horizontal_padding"
		android:textColor="@color/timeline_text"
		android:textSize="@dimen/timeline_item_team_size"
		tools:text="Home team name"
		android:layout_weight="1"/>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/home_team_icon"
		android:layout_width="@dimen/timeline_item_icon_size"
		android:layout_height="@dimen/timeline_item_icon_size"
		android:src="#000"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/goals_home_team"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/horizontal_padding"
		android:textColor="@color/timeline_text"
		android:textSize="@dimen/timeline_item_goal_size"
		tools:text="3"/>

	<FrameLayout
		android:clickable="true"
		android:id="@+id/item_timeline_separator"
		android:layout_width="wrap_content"
		android:paddingLeft="@dimen/timeline_item_horizontal_padding"
		android:paddingRight="@dimen/timeline_item_horizontal_padding"
		android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/horizontal_padding"
		android:layout_marginRight="@dimen/horizontal_padding"
		android:background="@color/timeline_separator_background">

		<TextView
			android:id="@+id/date"
			android:textColor="@color/timeline_separator_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="21:30"
			android:layout_gravity="center_vertical"/>

	</FrameLayout>

	<TextView
		android:id="@+id/goals_away_team"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="@dimen/horizontal_padding"
		android:textColor="@color/timeline_text"
		android:textSize="@dimen/timeline_item_goal_size"
		tools:text="3"/>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/away_team_icon"
		android:layout_width="@dimen/timeline_item_icon_size"
		android:layout_height="@dimen/timeline_item_icon_size"
		android:src="#FFF"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/away_team_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="@dimen/horizontal_padding"
		android:textColor="@color/timeline_text"
		android:textSize="@dimen/timeline_item_team_size"
		tools:text="Away team name"
		android:layout_weight="1"/>

</LinearLayout>