<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#EEEEEE"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:background="@color/timeline_background_separator"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/timeline_background_title"
		android:padding="@dimen/horizontal_padding">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#333"
			android:textSize="24sp"
			android:textStyle="bold|italic"
			tools:text="Today"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical"
			android:textColor="#000"
			android:textSize="16sp"
			tools:text="3"/>

	</FrameLayout>

	<ListView
		android:id="@+id/list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/horizontal_padding"
		android:background="@drawable/timeline_list_background"
		android:paddingBottom="@dimen/timeline_list_vertical_padding"
		android:paddingTop="@dimen/timeline_list_vertical_padding"/>

	<include
		layout="@layout/empty_content"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:background="@color/timeline_background_separator"/>

</LinearLayout>