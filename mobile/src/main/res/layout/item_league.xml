<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/leagues_list_item_height"
	android:background="@drawable/leagues_list_item_background"
	android:clickable="true"
	android:paddingLeft="@dimen/horizontal_padding"
	android:paddingRight="@dimen/horizontal_padding">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/leagues_list_item_icon_size"
		android:layout_height="@dimen/leagues_list_item_icon_size"
		android:layout_gravity="center_vertical"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="56dp"
		android:textColor="@color/leagues_list_text"
		android:textSize="@dimen/leagues_list_item_text_size"
		tools:text="League name"/>

</FrameLayout>