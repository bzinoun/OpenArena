<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:windowBackground">@color/window_background</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Toolbar">
		<item name="titleTextColor">@color/toolbar_title</item>
		<item name="subtitleTextColor">@color/toolbar_subtitle</item>
		<item name="android:textColorSecondary">@color/toolbar_title</item>
	</style>

	<style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorPrimary">@color/primary</item>
		<item name="android:background">#FFF</item>
	</style>

</resources>
